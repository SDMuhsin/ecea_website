doctype html
html
	head 
		title Member Profile
		include ./bootstrap.pug
	body
		include ./navbar.pug
		div.container-fluid.p-4
			div.row.justify-content-center
				div.col-md-10.p-4.shadow-sm
					div.p-4
						div.container-fluid
							div.row.justify-content-center
								div.col-10.p-1
									p.font-weight-bold.text-center.p-1 User Profile
							div.row.justify-content-between
								div.col-sm-6
									div.p-2.text-left Name
								div.col-sm-6
									div.p-2.text-left #{display_username}
							div.row.justify-content-between
								div.col-sm-6
									div.p-2.text-left Registration number
								div.col-sm-6
									div.p-2.text-left #{display_userregnumber}
							div.row.justify-content-between
								div.col-sm-6
									div.p-2.text-left Interests
								div.col-sm-6
									each val in display_interests
										div.p-2= val
							
							if(display_interviewquestions.length)
								div.row.justify-content-center
									div.p-2.text-center.lead Interview Questions
								each val in display_interviewquestions
									div.row.my-3.justify-content-center
										div.col-10.shadow-sm.p-4
											div.p-2.lead.text-secondary= val.Type
											div.p-2.lead.font-weight-bold= val.question
											div.p-2.lead= val.answer	
